include ../input-dropdown/input-dropdown

mixin form-room(options)
  -
    const { textItem, transformed = '', padding = '', marginInputs = '', marginAmount = '', display = '', marginIcon = '', width = '' } = options;

    const guests = [
      {
        text: 'взрослые', 
        number: 2
      }, 
      {
        text: 'дети', 
        number: 1
      }, 
      {
        text: 'младенцы', 
        number: 0, 
        opacity: 'input__btn_opaque'
      }
    ];

  form.form.js-form
    .form__block-price
      p.form__symbol №
        span.form__symbol_size_large 888
          span(class=`font-h3 form__symbol_colored ${padding}`) Люкс
      p.form__number 9 990₽
        span.form__number_size_small в сутки
    div(class=`form__inputs ${marginInputs}`) 
      +input-dropdown({ value: '19.08.2019', id: 'date3', inputClassName: 'input__input_width_maximum', text: 'прибытие', datepicker: 'js-datepick3' })
      +input-dropdown({ value: '23.08.2019', id: 'date4', inputClassName: 'input__input_width_maximum', text: 'выезд' })
    .form__guests 
      +input-dropdown({ dropdown: 'js-input-dropdown', value: '3 гостя', inputClassName: 'input__input_cursory', id: 'guest2', option: guests, textLeft: 'очистить', textRight: 'применить', text: 'гости' })
    .form__block-prices 
      ul.form__list 
        li.form__item 
          p(class=`form__text-price ${display}`) 9 990₽ х 4 суток
          p(class=`form__number-price ${width}`) 39 960₽
        li.form__item 
          p(class=`form__text-price ${display}`) Сбор за услуги: скидка 2 179₽
            span(class=`form__icon-price ${marginIcon}`) i
          p(class=`form__number-price ${width}`) 0₽
        li.form__item 
          p(class=`form__text-price ${display}`)= textItem
            span(class=`form__icon-price ${marginIcon}`) i
          p(class=`form__number-price ${width}`) 300₽
    div(class=`form__amount ${marginAmount}`) 
      p.form__total Итого
      p.form__ellipsis
      p(class=`form__total-number ${transformed}`) 38 081₽
    .form__submit_margin_top1
      +button-submit({ text: 'забронировать' })
