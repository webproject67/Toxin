include ../input-dropdown/input-dropdown

mixin form-room(options)
  - 
    const { prices, guests } = options;

  form.form-room(action="mock-address")
    .form-room__block-price
      p.form-room__symbol №
        span.form-room__number= ' 888'
          span.form-room__category= ' Люкс'
      p.form-room__price 9 990₽
        span.form-room__day= ' в сутки'
    div.form-room__inputs
      +input-dropdown({ value: '19.08.2019', id: 'date3', inputClassName: 'width', text: 'прибытие', datepicker: 'datepicker3' })
      +input-dropdown({ value: '23.08.2019', id: 'date4', inputClassName: 'width', text: 'выезд' })
    .form-room__guests 
      +input-dropdown({ dropdown: true, value: '3 гостя', inputClassName: 'cursor', id: 'guest2', option: guests, textLeft: 'очистить', textRight: 'применить', text: 'гости' })
    ul.form-room__list 
      each price in prices
        - const classes = price.state ? 'form-room__text-price_state_information' : '';
        li.form-room__item 
          p.form-room__text-price(class=classes)= price.text
          p.form-room__number-price= price.number
    div.form-room__amount 
      p.form-room__total Итого
      p.form-room__ellipsis
      p.form-room__total-number 38 081₽
    .form-room__submit
      +button({ text: 'ЗАБРОНИРОВАТЬ', type: 'button', theme: 'filled', icon: 'arrow' })
