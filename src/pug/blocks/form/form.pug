mixin form-registration()
  form.form
    h1(class="font-h1 form__title") Регистрация аккаунта
    +input({
      type: 'text', 
      placeholder: 'Имя'
    })
    .form__surname
      +input({
        type: 'text', 
        placeholder: 'Фамилия'
      })
    +radio()
    .form__birthday
      +input({
        textLeft: 'дата рождения', 
        type: 'text', 
        placeholder: 'ДД.ММ.ГГГГ'
      })
    +input({
      textLeft: 'данные для входа в сервис', 
      type: 'email', 
      placeholder: 'Email'
    })
    .form__password
      +input({
        type: 'password', 
        placeholder: 'Пароль'
      })
    +toggle({
      checkbox: 'checkbox2', 
      checked: false
    })
    .form__submit--margin1
      +button-submit({text: 'перейти к оплате'})
    .form__reg 
      p.form__text-reg Уже есть аккаунт на Toxin
      +button-link({
        text: 'ВОЙТИ', 
        className: 'button-link__link button-link__link--border'
      })


mixin form-sign-in()
  form.form
    h1(class="font-h1 form__title") Войти
    +input({
      type: 'email', 
      placeholder: 'Email'
    })
    .form__password
      +input({
        type: 'password', 
        placeholder: 'Пароль'
      })
    .form__submit--margin2
      +button-submit({text: 'войти'})
    .form__reg 
      p.form__text-reg Нет аккаунта на Toxin?
      +button-link({
        text: 'Создать', 
        className: 'button-link__link button-link__link--border'
      })