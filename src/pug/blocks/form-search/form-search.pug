include ../input-dropdown/input-dropdown
include ../button-link/button-link
include ../button-submit/button-submit
include ../checkbox-toggle/checkbox-toggle

mixin form-search
  -
    const guests = [
      {
        text: 'взрослые', 
        number: 0, 
        opacity: true
      }, 
      {
        text: 'дети', 
        number: 0, 
        opacity: true
      }, 
      {
        text: 'младенцы', 
        number: 0, 
        opacity: true
      }
    ];

  form.form.js-form.js-form-search
    h1.font-h1.form__title Найдём номера под ваши пожелания
    .form__inputs 
      +input-dropdown({ value: 'ДД.ММ.ГГГГ', id: 'date1', inputClassName: 'width', text: 'прибытие', datepicker: 'datepicker2' })
      +input-dropdown({ value: 'ДД.ММ.ГГГГ', id: 'date2', inputClassName: 'width', text: 'выезд' })
    .form__guests 
      +input-dropdown({ dropdown: true, value: 'Сколько гостей', inputClassName: 'cursor', id: 'guest1', option: guests, textLeft: '', textRight: 'применить', text: 'гости' })
    .form__submit 
      +button-submit({ text: 'подобрать номер' })
