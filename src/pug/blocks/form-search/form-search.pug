include ../input-dropdown/input-dropdown
include ../button-link/button-link
include ../button-submit/button-submit
include ../checkbox-toggle/checkbox-toggle

mixin form-search
  form.form.js-form.js-form-search
    h1.font-h1.form__title Найдём номера под ваши пожелания
    .form__inputs 
      +input-dropdown({ value: 'ДД.ММ.ГГГГ', id: 'date1', inputClassName: 'input__input_width_maximum', text: 'прибытие', datepicker: 'js-datepick2' })
      +input-dropdown({ value: 'ДД.ММ.ГГГГ', id: 'date2', inputClassName: 'input__input_width_maximum', text: 'выезд' })
    .form__guests 
      +input-dropdown({ dropdown: 'js-input-dropdown', value: 'Сколько гостей', inputClassName: 'input__input_cursory', id: 'guest1', option: [{ text: 'взрослые', number: 0, opacity: 'input__btn_opaque' }, { text: 'дети', number: 0, opacity: 'input__btn_opaque' }, { text: 'младенцы', number: 0, opacity: 'input__btn_opaque' }], textLeft: '', textRight: 'применить', text: 'гости' })
    .form__submit 
      +button-submit({ text: 'подобрать номер' })
