mixin checkbox-list(options)
  -
    const { value, state, checkboxes } = options;

    const stateModifiers = {
      active: 'checkbox-list_state_active',
    };

    const classes = [
      stateModifiers[state],
    ];

  .checkbox-list.js-checkbox-list(class=classes)
    button.checkbox-list__button(type="button")= value
    ul.checkbox-list__list
      each val in checkboxes
        li.checkbox-list__item
          +checkbox(val)
