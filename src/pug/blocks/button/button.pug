mixin button-like(options)
  -
    const {text, number, buttonClassName} = options
    let letButtonClassName = 'button-like__button js-button-like__button'
    letButtonClassName += buttonClassName ? ` ${buttonClassName}` : ''

  .button-like  
    button(class= letButtonClassName type="button")= text
      span.button-like__button--number= number

mixin button-rate(options)
  -
    const {count} = options

  div(class="button-rate js-button-rate" data-count= count)

mixin button-link(options) 
  -
    const {text, href, linkClassName} = options
    let letLinkClassName = 'font-h3'
    letLinkClassName += linkClassName ? ` ${linkClassName}` : ''

  .button-link
    a(class= letLinkClassName href= href)= text

mixin button-submit(options) 
  -
    const {text} = options

  .button-submit
    input(class="font-h3 button-submit__input" type="submit" id="submit" value= text)
    label(class="button-submit__label" for="submit") 
      span(class="font-icon button-submit__icon") arrow_forward