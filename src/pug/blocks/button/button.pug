mixin button(options)
  -
    const { text, href, type, theme, icon, state, size } = options;

    const tag = {
      link: 'a',
      button: 'button',
      submit: 'button',
    }

    const themeModifiers = {
      bordered: 'button_theme_bordered',
      filled: 'button_theme_filled',
    };

    const iconModifiers = {
      arrow: 'button_icon_arrow',
    };

    const stateModifiers = {
      hovering: 'button_state_hovering',
    };

    const sizeModifiers = {
      wide: 'button_size_wide',
    };

    const classes = [
      themeModifiers[theme], 
      iconModifiers[icon], 
      stateModifiers[state],
      sizeModifiers[size],
    ];

    const buttonType = type === 'submit' && type;

  #{tag[type]}.button(class=classes, type=buttonType, href=href)= text
