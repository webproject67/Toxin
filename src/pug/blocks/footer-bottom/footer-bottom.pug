mixin footer-bottom(options)
  - const { display, margin } = options;
  - const classNameDisplay = display ? 'footer-bottom_displayed' : '';
  - const classNameMargin = margin ? 'footer-bottom__socials_margin_common' : '';
  -
    const links = [
      { href: 'https://twitter.com/?lang=ru', src: '../../blocks/footer-bottom/img/svg/twitter.svg' }, 
      { href: 'https://ru-ru.facebook.com/', src: '../../blocks/footer-bottom/img/svg/facebook.svg' }, 
      { href: 'https://www.instagram.com/?hl=ru', src: '../../blocks/footer-bottom/img/svg/instagram.svg' }
    ];

  div(class=`footer-bottom ${classNameDisplay}`) 
    p.footer-bottom__copyright Copyright © 2018 Toxin отель. Все права зачищены.
    ul(class=`footer-bottom__socials ${classNameMargin}`) 
      each val in links
        li.footer-bottom__social 
          a.footer-bottom__link-social(
            href=val.href,
            target="_blank",
            rel="noopener noreferrer"
          )
            img.footer-bottom__img(src=val.src, alt="logo")
