include ../button/button

mixin nav-reg(options)
  -
    const {name} = options

  if name 
    a(class="nav-reg__name" href="#")= name 
  else
    .nav-reg 
      ul.nav-reg__list 
        li.nav-reg__item
          +button-link({
            text: 'Войти', 
            href: 'sign-in.html',
            linkClassName: 'button-link__link button-link__link--border button-link__link--width1'
          })
        li.nav-reg__item
          +button-link({
            text: 'Зарегистрироваться', 
            href: 'registration.html',
            linkClassName: 'button-link__link button-link__link--width2'
          })