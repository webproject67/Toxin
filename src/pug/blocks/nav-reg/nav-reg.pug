include ../button-link-border/button-link-border
include ../button-link-bk/button-link-bk

mixin nav-reg(options)
  - const { name } = options;

  if name
    a.nav-reg__name(href="/mock-address")= name
  else
    .nav-reg 
      ul.nav-reg__list 
        li.nav-reg__item
          +button-link-border({ text: 'Войти', href: 'sign-in.html', padding: true })
        li.nav-reg__item
          +button-link-bk({ text: 'Зарегистрироваться', href: 'registration.html', padding: true })
