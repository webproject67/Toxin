include ../button-link/button-link

mixin nav-reg(options)
  - const { name } = options;

  if name
    a.nav-reg__name(href="/mock-address")= name
  else
    .nav-reg 
      ul.nav-reg__list 
        li.nav-reg__item
          +button-link({ text: 'Войти', href: 'sign-in.html', linkClassName: 'border', padding: true })
        li.nav-reg__item
          +button-link({ text: 'Зарегистрироваться', href: 'registration.html', linkClassName: 'background', padding: true })
