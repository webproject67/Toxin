include ../input/input
include ../checkbox-toggle/checkbox-toggle

mixin form-registration(options)
  - const { textSubmit } = options;

  form.form
    h1.form__title Регистрация аккаунта
    .form__name 
      +input({ placeholder: 'Имя' })
    .form__surname 
      +input({ placeholder: 'Фамилия' })
    .form__radio
      include ../radio/radio
    .form__birthday
      +input({ placeholder: 'ДД.ММ.ГГГГ', text: 'дата рождения', id: 'birthday', length: 10, autocomplete: 'off', pattern: true })
    .form__email
      +input({ placeholder: 'Email', types: 'email', text: 'данные для входа в сервис' })
    .form__password
      +input({ types: 'password', placeholder: 'Пароль' })
    .form__checkbox
      +checkbox-toggle({ id: 'checkbox', checked: false })
    .form__submit_margin_top2
      +button-link({ text: textSubmit, type: 'button', theme: 'submit', color: 'colorWhite' })
    .form__reg 
      p.form__text-reg Уже есть аккаунт на Toxin
      +button-link({ text: 'ВОЙТИ', type: 'link', href: 'sign-in.html', theme: 'bg', color: 'colorPurple' })
