mixin main-landing()
  main(class="page-main js-page-main_image1")
    div(class="js-slider")
      .slItems
        .page-main__form
          +form-search
        p.page-main__text Лучшие номера для вашей работы, отдыха и просто вдохновения
        div(class="slItem page-main_background3" style="background-position: center bottom")
        div(class="slItem page-main_background1" style="background-position: center bottom")
        div(class="slItem page-main_background2" style="background-position: center bottom")
    

mixin main-registration()
  main(class="page-main js-page-main_image2")
    div(class="js-slider")
      .slItems
        div(class="page-main__form page-main__form_margin_common1")
          +form-registration({textSubmit: 'зарегистрироваться'})
        div(class="slItem page-main_background4" style="background-position: center 79%")
        div(class="slItem page-main_background3" style="background-position: center 79%")
        div(class="slItem page-main_background1" style="background-position: center 79%")
        div(class="slItem page-main_background2" style="background-position: center 79%")

mixin main-sign-in()
  main(class="page-main js-page-main_image3")
    div(class="js-slider")
      .slItems
