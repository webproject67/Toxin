mixin main-landing()
  main(class="page-main page-main--position1 js-page-main--position1")
    div(class="slider js-slider")
      .slItems
        .page-main__form
          +form-search
        p.page-main__text Лучшие номера для вашей работы, отдыха и просто вдохновения
        div(class="slItem page-main--background3" style="background-position: center bottom")
        div(class="slItem page-main--background1" style="background-position: center bottom")
        div(class="slItem page-main--background2" style="background-position: center bottom")
    

mixin main-registration()
  main(class="page-main page-main--position2 js-page-main--position2")
    div(class="slider js-slider")
      .slItems
        div(class="page-main__form page-main__form--margin1")
          +form-registration({textSubmit: 'зарегистрироваться'})
        div(class="slItem page-main--background4" style="background-position: center 79%")
        div(class="slItem page-main--background3" style="background-position: center 79%")
        div(class="slItem page-main--background1" style="background-position: center 79%")
        div(class="slItem page-main--background2" style="background-position: center 79%")

mixin main-sign-in()
  main(class="page-main page-main--position3 js-page-main--position3")
    div(class="slider js-slider")
      .slItems
        div(class="page-main__form page-main__form--margin2")
          +form-sign-in
        div(class="slItem page-main--background4" style="background-position: center 98%")
        div(class="slItem page-main--background3" style="background-position: center 98%")
        div(class="slItem page-main--background1" style="background-position: center 98%")
        div(class="slItem page-main--background2" style="background-position: center 98%")

