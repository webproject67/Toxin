mixin main-room-details()
  main(class="page-main page-main_no_padding")
    section.page-main__gallery
      include ../gallery/gallery
    .page-main__wrapper
      section.page-main__details
        .page-main__conveniences
          .page-main__convenience
            h2(class="font-h2 page-main__subtitle") Сведения о номере
            +advantage({
              texts: [
                {
                  icon: 'insert_emoticon', 
                  text: 'Комфорт', 
                  span: 'Шумопоглощающие стены'
                },
                {
                  icon: 'location_city', 
                  text: 'Удобство', 
                  span: 'Окно в каждой из спален'
                },
                {
                  icon: 'whatshot', 
                  text: 'Уют', 
                  span: 'Номер оснащён камином'
                }
