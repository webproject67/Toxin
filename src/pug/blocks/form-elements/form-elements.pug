      })
  .form-elements__block6
    .form-elements__block
      +input-dropdown({
        text: 'dropdown',
        value: '3 гостя',
        id: 'guest3',
        inputClassName: 'input__input--border', 
        optionsClassName: 'input__select-options--display', 
        option: [
          {text: 'взрослые', number: 2}, 
