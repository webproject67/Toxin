  .form-elements__block7
    .form-elements__block
      +checkbox-list({
        text: 'expandable checkbox list',
        listClassName: 'checkbox__list--display',
        checkboxs: [
          {label: 'Завтрак', id: 'breakfast1', checked: false},
          {label: 'Письменный стол', id: 'desk1', checked: true},
          {label: 'Стул для кормления', id: 'chair1', checked: true},
          {label: 'Кроватка', id: 'Crib1', checked: true},
          {label: 'Телевизор', id: 'TV1', checked: false},
          {label: 'Шампунь', id: 'shampoo1', checked: false}
        ]
      })
    .form-elements__block
      +checkbox-list({
        text: 'expandable checkbox list',
        iconClassName: 'checkbox-list__icon--rotate',
        checkboxs: [
          {label: 'Завтрак', id: 'breakfast2', checked: false},
          {label: 'Письменный стол', id: 'desk2', checked: true},
          {label: 'Стул для кормления', id: 'chair2', checked: true},
          {label: 'Кроватка', id: 'Crib2', checked: true},
          {label: 'Телевизор', id: 'TV2', checked: false},
          {label: 'Шампунь', id: 'shampoo2', checked: false}
        ]
      })
  .form-elements__block8
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") rich Checkbox Buttons
      .form-elements__block-checkbox
        +checkbox({
          labelClassName: 'checkbox__label--color1',
          checkboxs: [
            {
              label: 'Широкий коридор', 
              id: 'hallway', 
              checked: false,
              text: 'Ширина коридоров в номере не менее 91 см.',
              className: 'checkbox__item--width1'
            },
            {
              label: 'Помощник для инвалидов', 
              id: 'invalid', 
              checked: false,
              text: 'На 1 этаже вас встретит специалист  и проводит до номера.',
              className: 'checkbox__item--width2'
            }
          ]
        })
  .form-elements__block9
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") bullet list
      .form-elements__block-condition
        +condition
  .form-elements__block10
    .form-elements__block
      +advantage({
        texts: [
          {icon: 'insert_emoticon', text: 'Комфорт', span: 'Шумопоглощающие стены'},
          {icon: 'location_city', text: 'Удобство', span: 'Окно в каждой из спален'}
        ] 
      })
  .form-elements__block11
    .form-elements__block
      +reviews({
        reviews: [
          {
            image: 'image16', 
            buttonText: 'favorite', 
