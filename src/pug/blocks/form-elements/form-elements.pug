include ../input/input
include ../checkbox/checkbox
include ../button/button
include ../slider/slider
include ../condition/condition
include ../advantage/advantage
include ../reviews/reviews

.form-elements 
  .form-elements__block1
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") Text Field
        p(class="font-h3 form-elements__text form-elements__text--color") default
      +input({
        types: 'email',
        placeholder: 'Email'
      })
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") Text Field
        p(class="font-h3 form-elements__text form-elements__text--color") Hover / Focus
      +input({
        types: 'text',
        placeholder: 'This is pretty awesome',
        inputClassName: 'input__input--hover'
      })
    .form-elements__block
      +input-dropdown({
        text: 'dropdown',
        value: 'Сколько гостей',
        id: 'guest1',
        option: [
          {text: 'взрослые', number: 0, opacityClassName: 'input__btn--opacity'}, 
          {text: 'дети', number: 0, opacityClassName: 'input__btn--opacity'}, 
          {text: 'младенцы', number: 0, opacityClassName: 'input__btn--opacity'}
        ],
        textLeft: '', 
        textRight: 'применить'
      })
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") masked text field
      +input({
        types: 'text',
        placeholder: 'ДД.ММ.ГГГГ',
        id: 'birthdate'
      })
    .form-elements__block
      .form-elements__block-left
        +input-dropdown({
          text: 'date dropdown',
          value: 'ДД.ММ.ГГГГ',
          id: 'date1',
          inputClassName: 'input__input--width'
        })
      .form-elements__block-right
        +input-dropdown({
          text: 'date dropdown',
          value: '19.08.2019',
          id: 'date2',
          inputClassName: 'input__input--width'
        })
    .form-elements__block
      +input-dropdown({
        text: 'filter date dropdown',
        value: '19 авг - 23 авг',
        id: 'date'
      })
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") subscription text field
      +input-email
  .form-elements__block2
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") Checkbox Buttons
      .form-elements__block-checkbox
        +checkbox({
          checkboxs: [
            {label: 'Можно курить', id: 'smoke', checked: false},
            {label: 'Можно с питомцами', id: 'pets', checked: true},
            {label: 'Можно пригласить гостей (до 10 человек)', id: 'guests', checked: true}
          ]
        })
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") Radio Buttons
      .form-elements__block-radio
        include ../radio/radio
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") Toggle
      .form-elements__block-toggle
        +checkbox-toggle({
          id: 'checkboxOn', 
          checked: true
        })
        +checkbox-toggle({
          id: 'checkboxOff', 
          checked: false
        })
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") like button
      .form-elements__block-like
        +button-like({
          text: 'favorite_border', 
          number: 2
        })
        +button-like({
          text: 'favorite', 
          number: 12,
          buttonClassName: 'button-like__button--active'
        })
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") rate button
      .form-elements__block-rate
        +button-rate({id: 'rate1'})
        +button-rate({id: 'rate2'})
  .form-elements__block3 
    .form-elements__block
      +slider({text: 'Range Slider'})
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") buttons
      .form-elements__block-link-bg 
        +button-link({
          text: 'click me', 
          href: '#',
          linkClassName: 'button-link__link'
        })
        +button-link({
          text: 'click me', 
          href: '#',
          linkClassName: 'button-link__link button-link__link--hover'
        })
      div(class="form-elements__block-link-bg form-elements__block-link-bg--margin")
        +button-link({
          text: 'click me', 
          href: '#',
          linkClassName: 'button-link__link button-link__link--border'
        })
        +button-link({
          text: 'click me', 
          href: '#',
          linkClassName: 'button-link__link button-link__link--hover button-link__link--border'
        })
      .form-elements__block-link 
        +button-link({
          text: 'click me', 
          href: '#',
          linkClassName: 'button-link2__link'
        })
        +button-link({
          text: 'click me',
          href: '#',
          linkClassName: 'button-link2__link button-link2__link--hover'
        })
      .form-elements__block-link-submit
        +button-submit({text: 'перейти к оплате'})
    .form-elements__block
      .form-elements__texts
        h3(class="font-h3 form-elements__text") pagination
      .form-elements__block-pagination
        include ../pagination/pagination
  .form-elements__block4
    .form-elements__block
      +input-dropdown({
        text: 'dropdown',
        text2: 'default',
        value: '2 спальни, 2 кровати...',
        id: 'rooms1',
        option: [
          {text: 'спальни', number: 2}, 
          {text: 'кровати', number: 2}, 
          {text: 'ванные комнаты', number: 0, opacityClassName: 'input__btn--opacity'}
        ]
      })
    .form-elements__block
      +input-dropdown({
        text: 'dropdown',
        text2: 'expanded',
        value: '2 спальни, 2 кровати...',
        id: 'rooms2',
        inputClassName: 'input__input--border', 
        optionsClassName: 'input__select-options--display', 
        option: [
          {text: 'спальни', number: 2}, 
          {text: 'кровати', number: 2}, 
          {text: 'ванные комнаты', number: 0, opacityClassName: 'input__btn--opacity'}
        ]
      })
  .form-elements__block5
    .form-elements__block
      +input-dropdown({
        text: 'dropdown',
        value: 'Сколько гостей',
        id: 'guest2',
        inputClassName: 'input__input--border', 
        optionsClassName: 'input__select-options--display', 
        option: [
          {text: 'взрослые', number: 0, opacityClassName: 'input__btn--opacity'}, 
