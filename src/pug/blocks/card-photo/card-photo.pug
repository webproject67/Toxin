mixin card-photo(options)
  -
    const {listClassName, itemClassName, spanClassName, photos} = options
    let letitemClassName = 'card-photo__item'
    letitemClassName += itemClassName ? ` ${itemClassName}` : ''
    let letListClassName = 'card-photo__list'
    letListClassName += listClassName ? ` ${listClassName}` : ''
    let letSpanClassName = 'font-h3 card-photo__symbol--color'
    letSpanClassName += spanClassName ? ` ${spanClassName}` : ''

  .card-photo
    ul(class= letListClassName)
      each val in photos
        li(class= letitemClassName)
          .card-photo__block-img
            img(class="card-photo__img" src=`../../blocks/card-photo/img/${val.img}`, alt="photo")
            div(class="font-icon card-photo__button card-photo__button--next") expand_more
            div(class="font-icon card-photo__button card-photo__button--prev") expand_more
            div.card-photo__pagination
          a(class="card-photo__link" href="room-details.html")
            .card-photo__block-price
              p.card-photo__symbol № 
                span.card-photo__symbol--size= val.number
                  span(class= letSpanClassName)=  val.luxe 
              p.card-photo__number= `${val.price}₽ ` 
                span.card-photo__number--size в сутки
            .card-photo__block-estimations
              +button-rate({number: val.estimation})
              p.card-photo__text-review= val.review  
                span.card-photo__text-review--weight  Отзывов