include ../input/input

mixin footer-bottom(options)
  -
    const {bottomClassName, listClassName} = options
    let letBottomClassName = 'page-footer__bottom'
    letBottomClassName += bottomClassName ? ` ${bottomClassName}` : ''
    let letListClassName = 'page-footer__socials'
    letListClassName += listClassName ? ` ${listClassName}` : ''

  div(class= letBottomClassName) 
    p.page-footer__copyright Copyright © 2018 Toxin отель. Все права зачищены.
    ul(class= letListClassName) 
      li.page-footer__social 
        a(class="page-footer__link-social" href="https://twitter.com/?lang=ru")
          img(class="page-footer__img" src="../../blocks/footer/img/svg/twitter.svg", alt="logo")
      li.page-footer__social
        a(class="page-footer__link-social" href="https://ru-ru.facebook.com/")
          img(class="page-footer__img" src="../../blocks/footer/img/svg/facebook.svg", alt="logo")
      li.page-footer__social
        a(class="page-footer__link-social" href="https://www.instagram.com/?hl=ru")
          img(class="page-footer__img" src="../../blocks/footer/img/svg/instagram.svg", alt="logo")

mixin footer()
  footer.page-footer 
    .page-footer__logo
        +logotype({imgClassName: 'logotype__img--display'})
    .page-footer__top
      .page-footer__block-logo 
        +logotype({})
        p.page-footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
      .page-footer__block-nav 
        h3(class="font-h3 page-footer__links") навигация
        ul.page-footer__list  
          li.page-footer__item 
            a(class="page-footer__link" href="#") О нас  
          li.page-footer__item 
            a(class="page-footer__link" href="#") Новости
          li.page-footer__item 
            a(class="page-footer__link" href="#") Служба поддержки 
          li.page-footer__item 
            a(class="page-footer__link" href="#") Услуги
      .page-footer__block-nav 
        h3(class="font-h3 page-footer__links") о нас
        ul.page-footer__list  
          li.page-footer__item 
            a(class="page-footer__link" href="#") О сервисе 
          li.page-footer__item 
            a(class="page-footer__link" href="#") Наша команда
          li.page-footer__item 
            a(class="page-footer__link" href="#") Вакансии 
          li.page-footer__item 
            a(class="page-footer__link" href="#") Инвесторы
      .page-footer__block-nav 
        h3(class="font-h3 page-footer__links") служба поддержки
        ul.page-footer__list  
          li.page-footer__item 
            a(class="page-footer__link" href="#") Соглашения
          li.page-footer__item 
            a(class="page-footer__link" href="#") Сообщества
          li.page-footer__item 
            a(class="page-footer__link" href="#") Связь с нами
      form.page-footer__block-subscription
        h3(class="font-h3 page-footer__links") Подписка
        p(class="page-footer__text page-footer__text--margin") Получайте специальные предложения и новости сервиса
        .page-footer__block-submit 
          +input-email
    .page-footer__center
    +footer-bottom({})

mixin footer-reduction(options)
  footer(Class="page-footer page-footer--width")
    +logotype({})
    +footer-bottom(options)