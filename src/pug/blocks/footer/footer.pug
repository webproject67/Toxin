include ../input-email/input-email
include ../footer-bottom/footer-bottom

mixin footer(options)
  - const { border } = options;
  - const classNameFooter = border ? 'page-footer_bordered' : '';
  -
    const linksText = [
    { title: 'навигация', links: ['О нас', 'Новости', 'Служба поддержки', 'Услуги'] }, 
    { title: 'о нас', links: ['О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы'] }, 
    { title: 'служба поддержки', links: ['Соглашения', 'Сообщества', 'Связь с нами'] }
    ];

  footer(class=`page-footer ${classNameFooter}`)
    .page-footer__logo
      +logotype({ displayed: true })
    .page-footer__top
      .page-footer__block-logo 
        +logotype(options)
        p.page-footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
      each val in linksText
        .page-footer__block-nav 
          h3.page-footer__links= val.title
          ul.page-footer__list 
            each link in val.links
              li.page-footer__item 
                a.page-footer__link(href="/mock-address")= link
      .page-footer__block-subscription
        h3.page-footer__links Подписка
        p.page-footer__text.page-footer__text_margin_common Получайте специальные предложения и новости сервиса
        .page-footer__block-submit 
          +input-email
    .page-footer__center
    +footer-bottom({})
