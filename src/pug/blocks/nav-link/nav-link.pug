mixin nav-link(options)
  - const { hover = '' } = options;
  - const links1 = ['О сервисе', 'Инвесторы', 'Сообщества'];
  - const links2 = ['Служба поддержки', 'Наша команда', 'Связь с нами'];

  .nav-link
    ul.nav-link__list
      li(class=`nav-link__item ${hover}`)
        a.nav-link__link О нас
      li.nav-link__item.js-nav-link__item
        a.nav-link__link Услуги
        span.font-icon.nav-link__icon expand_more
        ul.nav-link__options 
          each val in links1
            li.nav-link__option
              a.nav-link__link= val
      li.nav-link__item
        a.nav-link__link Вакансии
      li.nav-link__item
        a.nav-link__link Новости
      li.nav-link__item.js-nav-link__item
        a.nav-link__link Соглашения
        span.font-icon.nav-link__icon expand_more
        ul.nav-link__options 
          each val in links2
            li.nav-link__option
              a.nav-link__link= val
