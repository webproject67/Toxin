include ../input/input
include ../radio/radio
include ../subtitle/subtitle
include ../toggle/toggle

mixin form-sign-up(options)
  -
    const { genders, textSubmit } = options;

    const dateFormat = '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}';

  form.form-sign-up(action="mock-address")
    h1.form-sign-up__title Регистрация аккаунта
    .form-sign-up__name 
      +input({ placeholder: 'Имя' })
    .form-sign-up__surname 
      +input({ placeholder: 'Фамилия' })
    .form-sign-up__radio
      each val in genders
        +radio(val)
    .form-sign-up__birthday
      .form-sign-up__subtitle
        +subtitle({ id: 'birthDate', text: 'дата рождения', tag: 'label' })
      +input({ id: 'birthDate', placeholder: 'ДД.ММ.ГГГГ', js: 'birthDate', maxlength: 10, pattern: dateFormat })
    .form-sign-up__email
      .form-sign-up__subtitle
        +subtitle({ id: 'email', text: 'данные для входа в сервис', tag: 'label' })
      +input({ id: 'email', type: 'email', placeholder: 'Email' })
    .form-sign-up__password
      +input({ type: 'password', placeholder: 'Пароль' })
    .form-sign-up__checkbox
      +toggle({ value: 'Получать спецпредложения' })
    .form-sign-up__submit
      +button({ text: textSubmit, type: 'button', theme: 'filled', icon: 'arrow' })
    .form-sign-up__reg 
      p.form-sign-up__text-reg Уже есть аккаунт на Toxin
      +button({ text: 'войти', type: 'link', href: 'sign-in.html', theme: 'bordered' })
