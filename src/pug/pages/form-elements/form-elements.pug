extends ../../layouts/ui-kit-layout
include ../../blocks/logo-ui-kit/logo-ui-kit
include ../../blocks/input/input
include ../../blocks/dropdown-list/dropdown-list
include ../../blocks/button/button
include ../../blocks/dropdown-date/dropdown-date
include ../../blocks/subscription/subscription
include ../../blocks/checkbox/checkbox
include ../../blocks/radio/radio
include ../../blocks/toggle/toggle
include ../../blocks/like/like
include ../../blocks/rate/rate
include ../../blocks/range/range
include ../../blocks/pagination/pagination
include ../../blocks/checkbox-list/checkbox-list
include ../../blocks/bullet-list/bullet-list
include ../../blocks/advantage/advantage
include ../../blocks/feedback/feedback

block head
  - const title = 'Form elements';

block body
  -
    const dateFormat = '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}';

    const guests1 = [
      {
        text: 'взрослые', 
        number: 0, 
        translucent: true
      }, 
      {
        text: 'дети', 
        number: 0, 
        translucent: true
      }, 
      {
        text: 'младенцы', 
        number: 0, 
        translucent: true
      }
    ];

    const guests2 = [
      {
        text: 'взрослые', 
        number: 2, 
      }, 
      {
        text: 'дети', 
        number: 1, 
      }, 
      {
        text: 'младенцы', 
        number: 0, 
        translucent: true
      }
    ];

    const rooms = [
      {
        text: 'спальни', 
        number: 2, 
      }, 
      {
        text: 'кровати', 
        number: 2, 
      }, 
      {
        text: 'ванные комнаты', 
        number: 0, 
        translucent: true
      }
    ];

    const rules = [
      {
        value: 'Можно курить', 
      },
      {
        value: 'Можно с питомцами', 
        checked: true
      },
      {
        value: 'Можно пригласить гостей\n (до 10 человек)', 
        checked: true
      }
    ];

    const conveniences = [
      {
        value: 'Завтрак', 
      },
      {
        value: 'Письменный стол', 
        checked: true
      },
      {
        value: 'Стул для кормления', 
        checked: true
      },
      {
        value: 'Кроватка', 
        checked: true
      },
      {
        value: 'Телевизор', 
      },
      {
        value: 'Шампунь', 
      }
    ];

    const accessibility = [
      {
        value: 'Широкий коридор', 
        details: 'Ширина коридоров в номере\n не менее 91 см.',
        fw: 'bold'
      },
      {
        value: 'Помощник для инвалидов', 
        details: 'На 1 этаже вас встретит специалист\n и проводит до номера.',
        fw: 'bold'
      }
    ];

    const genders = [
      { 
        value: 'Мужчина',
        name: 'gender', 
        checked: true 
      }, 
      { 
        value: 'Женщина',
        name: 'gender', 
      }
    ];

    const specialOffers = [
      {
        value: 'Получать спецпредложения', 
        checked: true
      },
      {
        value: 'Получать спецпредложения', 
      },
    ];

    const likes = [
      {
        value: 2,
      },
      {
        value: 12,
        state: 'active'
      },
    ];

    const rates = [
      {
        count: 4
      },
      {
        count: 5
      },
    ];

    const bulletLists = [
      'Нельзя с питомцами', 
      'Без вечеринок и мероприятий', 
      'Время прибытия — после 13:00,\n а выезд до 12:00'
    ];

    const advantages = [
      {
        icon: 'insert_emoticon', 
        title: 'Комфорт', 
        text: 'Шумопоглощающие стены'
      },
      {
        icon: 'location_city', 
        title: 'Удобство', 
        text: 'Окно в каждой из спален'
      }
    ];

    const feedbacks = {
      image: 'image16', 
      value: 12,
      state: 'active',
      name: 'Мурад Сарафанов', 
      date: '5 дней назад',
      text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.'
    };

  .form-elements 
    .form-elements__logo 
      +logo-ui-kit
    .form-elements__content
      h1.form-elements__title Form Elements
      .form-elements__list
        .form-elements__item
          +input({ text: 'Text Field', desc: 'default', placeholder: 'Email' })
        .form-elements__item
          +input({ state: 'hovering', text: 'Text Field', desc: 'Hover / Focus', placeholder: 'This is pretty awesome' })
        .form-elements__item
          +dropdown-list({ text: 'dropdown', value: 'Сколько гостей', list: guests1, additionalButtons: true })
        .form-elements__item
          +input({ text: 'masked text field', placeholder: 'ДД.ММ.ГГГГ', js: 'birthDate', maxlength: 10, pattern: dateFormat })
        .form-elements__item.form-elements__item_size_displayed
          .form-elements__item-date
            +dropdown-date({ text: 'date dropdown', value: 'ДД.ММ.ГГГГ', js: 'calendar1' })
          .form-elements__item-date
            +dropdown-date({ text: 'date dropdown', value: 'ДД.ММ.ГГГГ' })
        .form-elements__item.form-elements__item_size_narrow
          +dropdown-date({ text: 'filter date dropdown', value: '19 авг - 23 авг', js: 'calendar2' })
        .form-elements__item.form-elements__item_size_narrow
          +subscription({ text: 'subscription text field', placeholder: 'Email' })
      .form-elements__list
        .form-elements__item
          h3.form-elements__subtitle Checkbox Buttons
          each val in rules
            .form-elements__checkbox
              +checkbox(val)
        .form-elements__item
          h3.form-elements__subtitle Radio Buttons
          .form-elements__radio
            each val in genders
              +radio(val) 
        .form-elements__item
          h3.form-elements__subtitle Toggle
          each val in specialOffers
            .form-elements__toggle
              +toggle(val) 
        .form-elements__item
          h3.form-elements__subtitle Like button
          .form-elements__like
            each val in likes
              +like(val) 
        .form-elements__item
          h3.form-elements__subtitle Rate button
          .form-elements__rate
            each val in rates
              +rate(val) 
      .form-elements__list
        .form-elements__item.form-elements__item_size_narrow
          +range({ text: 'Range Slider', selected: '5 000₽ - 10 000₽' })
        .form-elements__item
          h3.form-elements__subtitle buttons
          .form-elements__buttons-filled
            +button({ text: 'click me', type: 'button', theme: 'filled' })
            +button({ text: 'click me', type: 'button', theme: 'filled', state: 'hovering' })
          .form-elements__buttons-bordered
            +button({ text: 'click me', type: 'button', theme: 'bordered' })
            +button({ text: 'click me', type: 'button', theme: 'bordered', state: 'hovering' })
          .form-elements__buttons
            +button({ text: 'click me', type: 'button' })
            +button({ text: 'click me', type: 'button', state : 'hovering' })
          .form-elements__button
            +button({ text: 'перейти к оплате', type: 'button', theme: 'filled', icon: 'arrow' })
        .form-elements__item
          h3.form-elements__subtitle pagination
          .form-elements__pagination
            +pagination
      .form-elements__list
        .form-elements__item
          +dropdown-list({ text: 'dropdown', desc: 'default', value: '2 спальни, 2 кровати...', list: rooms })
        .form-elements__item
          +dropdown-list({ text: 'dropdown', desc: 'expanded', value: '2 спальни, 2 кровати...', list: rooms, state: 'displayed', theme: 'bordered' })
      .form-elements__list
        .form-elements__item
          +dropdown-list({ text: 'dropdown', value: 'Сколько гостей', list: guests1, additionalButtons: true, state: 'displayed', theme: 'bordered' })
      .form-elements__list
        .form-elements__item
          +dropdown-list({ text: 'dropdown', value: '3 гостя', list: guests2, additionalButtons: true, state: 'displayed', theme: 'bordered' })
      .form-elements__list
        .form-elements__item
          +checkbox-list({ value: 'expandable checkbox list', checkboxes: conveniences })
        .form-elements__item
          +checkbox-list({ value: 'expandable checkbox list', checkboxes: conveniences, state: 'active' })
      .form-elements__list
        .form-elements__item
          h3.form-elements__subtitle rich Checkbox Buttons
          each val in accessibility
            .form-elements__checkbox-access
              +checkbox(val)
      .form-elements__list
        .form-elements__item
          h3.form-elements__subtitle bullet list
          +bullet-list(bulletLists)
      .form-elements__list
        .form-elements__item
          each val in advantages
            .form-elements__advantage
              +advantage(val)
      .form-elements__list
        .form-elements__item
          +feedback(feedbacks)
