    const conditions = [
      'Нельзя с питомцами', 
      'Без вечеринок и мероприятий', 
      'Время прибытия — после 13:00, а выезд до 12:00'
    ];

    const genders = [
      { id: 'man', gender: 'Мужчина', checked: 'checked' }, 
      { id: 'woman', gender: 'Женщина' }
