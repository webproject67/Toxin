block head
  - const title = 'Form elements';

block body
  -
    const numbers = [
      {
        text: 'спальни', 
        number: 2
      }, 
      {
        text: 'кровати', 
        number: 2
      }, 
      {
        text: 'ванные комнаты', 
        number: 0, 
        opacity: true
      }
    ];

    const guests1 = [
      {
        text: 'взрослые', 
        number: 0, 
        opacity: true
      }, 
      {
        text: 'дети', 
        number: 0, 
        opacity: true
      }, 
      {
        text: 'младенцы', 
        number: 0, 
        opacity: true
      }
    ];

    const guests2 = [
      {
        text: 'взрослые', 
        number: 2
      }, 
      {
        text: 'дети', 
        number: 1
      }, 
      {
        text: 'младенцы', 
        number: 0, 
        opacity: true
      }
    ];

    const conveniences1 = [
      {
        value: 'Завтрак', 
        id: 'breakfast1', 
        checked: false
      },
      {
        value: 'Письменный стол', 
        id: 'desk1', 
        checked: true
      },
      {
        value: 'Стул для кормления', 
        id: 'chair1', 
        checked: true
      },
      {
        value: 'Кроватка', 
        id: 'Crib1', 
        checked: true
      },
      {
        value: 'Телевизор', 
        id: 'TV1', 
