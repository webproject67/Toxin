        id: 'breakfast2', 
        checked: false
      },
      {
        value: 'Письменный стол', 
        id: 'desk2', 
        checked: true
      },
      {
        value: 'Стул для кормления', 
        id: 'chair2', 
        checked: true
      },
      {
        value: 'Кроватка', 
        id: 'Crib2', 
        checked: true
      },
      {
        value: 'Телевизор', 
        id: 'TV2', 
        checked: false
      },
      {
        value: 'Шампунь', 
        id: 'shampoo2', 
        checked: false
      }
    ];

    const rules = [
      {
        value: 'Можно курить', 
        id: 'smoke', 
        checked: false
      },
      {
        value: 'Можно с питомцами', 
        id: 'pets', 
        checked: true
      },
      {
        value: 'Можно пригласить гостей (до 10 человек)', 
        id: 'guests', 
        checked: true
      }
    ];

    const accessibility = [
      {
        value: 'Широкий коридор', 
        id: 'hallway', 
        checked: false,
        details: 'Ширина коридоров в номере не менее 91 см.',
