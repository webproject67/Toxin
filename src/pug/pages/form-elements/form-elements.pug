  +logo
  .form-elements 
    h1.form-elements__title Form Elements
    .form-elements__block1
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text Text Field
          h3.form-elements__text.form-elements__text_colored default
        +input({ placeholder: 'Email', types: 'email' })
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text Text Field
          h3.form-elements__text.form-elements__text_colored Hover / Focus
        +input({ placeholder: 'This is pretty awesome', hover: true })
      .form-elements__block
        +input-dropdown({ dropdown: true, text: 'dropdown', value: 'Сколько гостей', inputClassName: 'cursor', id: 'guest1', option: guests1, textLeft: '', textRight: 'применить' })
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text masked text field
        +input({ placeholder: 'ДД.ММ.ГГГГ', id: 'birthday', length: 10, autocomplete: 'off', pattern: true })
      .form-elements__block
        .form-elements__block-left
          +input-dropdown({ text: 'date dropdown', value: 'ДД.ММ.ГГГГ', id: 'date1', inputClassName: 'width', datepicker: 'datepicker4' })
        .form-elements__block-right
          +input-dropdown({ text: 'date dropdown', value: '19.08.2019', id: 'date2', inputClassName: 'width' })
      .form-elements__block
        +input-dropdown({ text: 'filter date dropdown', value: '19 авг - 23 авг', inputClassName: 'cursor', id: 'date', datepicker: 'datepicker5' })
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text subscription text field
        +input-email
    .form-elements__block2
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text Checkbox Buttons
        .form-elements__block-checkbox
          each rule in rules
            +checkbox(rule)
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text Radio Buttons
        .form-elements__block-radio
          +radio(genders)
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text Toggle
        .form-elements__block-toggle
          +checkbox-toggle({ id: 'checkboxOn', checked: true })
          +checkbox-toggle({ id: 'checkboxOff', checked: false })
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text like button
        .form-elements__block-like
          +button-like({ text: 2 })
          +button-like({ text: 12, active: true })
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text rate button
        .form-elements__block-rate
          +button-rate({ count: 4 })
          +button-rate({ count: 5 })
    .form-elements__block3 
      .form-elements__block
        +slide({ text: 'Range Slider' })
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text buttons
        .form-elements__block-link-bg 
          +button({ text: 'click me', type: 'button', theme: 'filled' })
          +button({ text: 'click me', type: 'button', theme: 'filled', state: 'hovering' })
        .form-elements__block-link-bg.form-elements__block-link-bg_margin_top
          +button({ text: 'click me', type: 'button', theme: 'bordered' })
          +button({ text: 'click me', type: 'button', theme: 'bordered', state: 'hovering' })
        .form-elements__block-link 
          +button({ text: 'click me', type: 'button' })
          +button({ text: 'click me', type: 'button', state : 'hovering' })
        .form-elements__block-link-submit
          +button({ text: 'ПЕРЕЙТИ К ОПЛАТЕ', type: 'button', theme: 'filled', icon: 'arrow' })
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text pagination
        .form-elements__block-pagination
          +pagination()
    .form-elements__block4
      .form-elements__block
        +input-dropdown({ dropdown: true, text: 'dropdown', text2: 'default', value: '2 спальни, 2 кровати...', inputClassName: 'cursor', id: 'rooms1', option: numbers })
      .form-elements__block
        +input-dropdown({ dropdown: true, text: 'dropdown', text2: 'expanded', value: '2 спальни, 2 кровати...', id: 'rooms2', inputClassName: 'border', display: true, option: numbers })
    .form-elements__block5
      .form-elements__block
        +input-dropdown({ dropdown: true, text: 'dropdown', value: 'Сколько гостей', id: 'guest2', inputClassName: 'border', display: true, option: guests1, textLeft: '', textRight: 'применить' })
    .form-elements__block6
      .form-elements__block
        +input-dropdown({ dropdown: true, text: 'dropdown', value: '3 гостя', id: 'guest3', inputClassName: 'border', display: true, option: guests2, textLeft: 'очистить', textRight: 'применить' })
    .form-elements__block7
      .form-elements__block
        +checkbox-list({ value: 'EXPANDABLE CHECKBOX LIST', checkboxes: conveniences1 })
      .form-elements__block
        +checkbox-list({ value: 'EXPANDABLE CHECKBOX LIST', state: 'active', checkboxes: conveniences2 })
    .form-elements__block8
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text rich Checkbox Buttons
        .form-elements__block-checkbox
          each access in accessibility
            +checkbox(access)
    .form-elements__block9
      .form-elements__block
        .form-elements__texts
          h3.form-elements__text bullet list
        .form-elements__block-condition
          +condition(conditions)
    .form-elements__block10
      .form-elements__block
        +advantage({ texts: advantages })
    .form-elements__block11
      .form-elements__block
        +reviews({ reviews: reviews })
